# Server Environment Variables Template
# Copy this file to .env and update the values for your setup

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Room Configuration
MAX_ROOMS=100
MAX_USERS_PER_ROOM=50
ROOM_CLEANUP_INTERVAL_MINUTES=30
INACTIVE_ROOM_TIMEOUT_MINUTES=60
MAX_QUEUE_SIZE=100
MAX_CHAT_HISTORY=100

# Security (Change these for production!)
JWT_SECRET=your_secure_jwt_secret_here
SESSION_SECRET=your_secure_session_secret_here
BCRYPT_ROUNDS=10

# Socket Configuration
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Feature Flags
ENABLE_VOICE_CHAT=true
ENABLE_RATE_LIMITING=false
ENABLE_ROOM_PERSISTENCE=false
ENABLE_USER_ANALYTICS=false

# Logging
LOG_LEVEL=debug

# YouTube API (Server-side)
YOUTUBE_API_KEY=your_youtube_api_key_here
JWT_SECRET=your_jwt_secret_here
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info
LOG_FILE=logs/server.log

# Feature Flags
ENABLE_VOICE_CHAT=true
ENABLE_ROOM_PERSISTENCE=false
ENABLE_USER_ANALYTICS=false
ENABLE_RATE_LIMITING=true

# Performance
MAX_QUEUE_SIZE=100
MAX_CHAT_HISTORY=100
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000