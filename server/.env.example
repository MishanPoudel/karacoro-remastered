# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Room Configuration
MAX_ROOMS=1000
MAX_USERS_PER_ROOM=50
ROOM_CLEANUP_INTERVAL_MINUTES=30
INACTIVE_ROOM_TIMEOUT_MINUTES=60

# YouTube API Configuration (Optional - for server-side validation)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Database Configuration (if using database in future)
DATABASE_URL=
DB_HOST=localhost
DB_PORT=5432
DB_NAME=karaoke_party
DB_USER=
DB_PASSWORD=

# Security
JWT_SECRET=your_jwt_secret_here
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info
LOG_FILE=logs/server.log

# Feature Flags
ENABLE_VOICE_CHAT=true
ENABLE_ROOM_PERSISTENCE=false
ENABLE_USER_ANALYTICS=false
ENABLE_RATE_LIMITING=true

# Performance
MAX_QUEUE_SIZE=100
MAX_CHAT_HISTORY=100
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000