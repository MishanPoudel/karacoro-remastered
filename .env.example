# Environment Variables Template
# Copy this file to .env and update the values for your setup

# YouTube Data API v3 Key
# Get your API key from: https://console.developers.google.com/
# Enable YouTube Data API v3 for your project
NEXT_PUBLIC_YOUTUBE_API_KEY=your_youtube_api_key_here

# Optional: Set quota limits
NEXT_PUBLIC_YOUTUBE_QUOTA_LIMIT=10000

# Environment Configuration
NODE_ENV=development
NEXT_PUBLIC_PRODUCTION_MODE=false

# Server URLs (update for production)
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Server Ports
PORT=3000
SERVER_PORT=3001

# Feature Flags
NEXT_PUBLIC_ENABLE_VOICE_CHAT=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false

# Debug Settings
NEXT_PUBLIC_VERBOSE_LOGGING=true
NEXT_PUBLIC_SHOW_MOCK_INDICATORS=true
NEXT_PUBLIC_FORCE_DEVELOPMENT=true
NEXT_PUBLIC_MOCK_APIS=false

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Room Configuration  
MAX_ROOMS=100
MAX_USERS_PER_ROOM=50
ROOM_CLEANUP_INTERVAL_MINUTES=30
INACTIVE_ROOM_TIMEOUT_MINUTES=60
MAX_QUEUE_SIZE=100
MAX_CHAT_HISTORY=100

# Security (Change these for production!)
SESSION_SECRET=your_secure_session_secret_here
JWT_SECRET=your_secure_jwt_secret_here

# Upstash Redis (for caching)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
